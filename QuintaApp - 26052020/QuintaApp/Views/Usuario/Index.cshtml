@model QuintaApp.Models.Usuario

@{
    ViewBag.Title = "Index";
}

<h2>Validação de Usuário</h2>

@using (Html.BeginForm("Index", "Usuario", FormMethod.Post))
{
    @Html.ValidationSummary(true)
<fieldset>
    <legend>Dados de Usuário</legend>

    <div class="editor-label">
        @Html.LabelFor(m => m.UsuId)
    </div>

    <div class="editor-field">
        @Html.EditorFor(m => m.UsuId)
        @Html.ValidationMessageFor(m => m.UsuId)
    </div>
    <br />

    <div class="editor-label">
        @Html.LabelFor(m => m.Nome)
    </div>

    <div class="editor-field">
        @Html.EditorFor(m => m.Nome)
        @Html.ValidationMessageFor(m => m.Nome)
    </div>
    <br />

    <div class="editor-label">
        @Html.LabelFor(m => m.Obs)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Obs)
        @Html.ValidationMessageFor(m => m.Obs)
    </div>
    <br />

    <div class="editor-label">
        @Html.LabelFor(m => m.Nasc)
    </div>
    <div>
        @Html.EditorFor(m => m.Nasc)
        @Html.ValidationMessageFor(m => m.Nasc)
    </div>
    <br />

    <div class="editor-label">
        @Html.LabelFor(m => m.Email)
    </div>
    <div>
        @Html.EditorFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <br />

    <div class="editor-label">
        @Html.LabelFor(m => m.Login)
    </div>
    <div>
        @Html.EditorFor(m => m.Login)
        @Html.ValidationMessageFor(m => m.Login)
    </div>
    <br />

    <div class="editor-label">
        @Html.LabelFor(m => m.Senha)
    </div>
    <div>
        @Html.PasswordFor(m => m.Senha)
        @Html.ValidationMessageFor(m => m.Senha)
    </div>
    <br />

    <div class="editor-label">
        @Html.LabelFor(m => m.ConfirmaSenha)
    </div>
    <div>
        @Html.PasswordFor(m => m.ConfirmaSenha)
        @Html.ValidationMessageFor(m => m.ConfirmaSenha)
    </div>
    <br />

    <div>
        <input type="submit" value="Enviar" />
    </div>

</fieldset>

 @section Scripts{@Scripts.Render("~/bundles/jqueryval")}
}