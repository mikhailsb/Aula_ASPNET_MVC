@model IEnumerable<AppRoute66.Models.Noticia>

@{
    ViewBag.Title = "Home Page";
}

<h2>Rotas</h2>
<div>
    <ul>
        @foreach(string item in ViewBag.Categoria)
        {
            <li>@Html.ActionLink(item, "MostrarCategoria","Home", new {@Categoria = item}, null)</li>
        }
    </ul>
</div>
<div>
    <ul>
        @foreach(var item in Model)
        {
            <li>
                @Html.ActionLink(item.Titulo, "MostrarNoticia", "Home", new
           {
               @noticiaId = item.NoticiaId,
               @categoria = item.Categoria.ToLower(),
               @titulo = item.Titulo.ToLower()
           }, null);
                <em>@Html.DisplayFor(modelItem => item.Categoria)</em>
                <b>@Html.DisplayFor(ModelItem => item.Data)</b>
            </li>
        }
    </ul>
</div>
<div>
    @Html.ActionLink("Todas as notícias","Noticia","Home")
</div>